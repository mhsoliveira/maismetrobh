extends layout2

block content
  body
    div.container(style='padding-top:50px')
      div(class="col-md-5", style='padding: 0px;')
        img.logo(src='../images/Logo.jpg')
      div(class="col-md-7")
        div.headline
          div
            texto Uma linha de
            textored  METRO
            texto  escolhida pelo povo
          div
            texto de
            textobold  Belo Horizonte
        ul.nav2(style='padding-right: 0px !important; padding-top: 14px !important; margin-left: -7px; margin-right: -7px;')
          div(class="col-md-3", style="padding: 0px;")
            a(class='b', href="/login/")
              img.thumbs(src='../images/Thumbs/registo.jpg')
              p.thumbsTxt Crie sua conta
          if (user)
            div(class="col-md-3", style="padding: 0px;")
              a(class='b', href="/addidea/")
                img.thumbs(src='../images/Thumbs/desenha.jpg')
                p.thumbsTxt Propõe seu trajeto
          if (!user)
            div(class="col-md-3", style="padding: 0px;")
              a(class='b', href="/login/")
                img.thumbs(src='../images/Thumbs/desenha.jpg')
                p.thumbsTxt Propõe seu trajeto
          div(class="col-md-3", style="padding: 0px;")
            a(class='b', href="#debate")
              img.thumbs(src='../images/Thumbs/debate.jpg')
              p.thumbsTxt Entre no debate
          div(class="col-md-3", style="padding: 0px;")
            a(class='b', href="#")
              img.thumbs(src='../images/Thumbs/redes-sociais.jpg')
              p.thumbsTxt Partilhe nas redes
      if (user)
        div(class="col-md-5", style='padding: 0px;')
          a#btnAddIdea(href='/addidea/', class='btn login', style="float: left !important;") Adicionar Trajeto
      if (!user)
        div(class="col-md-5", style='padding: 0px;')
          a#btnAddIdea(href='/login/', class='btn login', style="float: left !important;") Adicionar Trajeto

      //icones de navegacao

      div.container
        a.col-md-12(name="debate", style='padding-top:140px')
        div(id="test-list", class="col-md-12", style='padding:0px;')
          h2(class="col-md-12", style='margin: auto; padding-left:5px; padding-right:15px; font-size:36px')
            texto Trajetos
            textored  +
            texto pertos de você
          div(class="col-md-12", style='font-size:40px; padding-left:5px; padding-right:39px; margin-top:10px;')
            p.h2(style='margin-top:10px;') Pesquisas Tags
            input#inputFilter(type='text', class='search incomment col-md-6', placeholder='#Procurar', style='font-size:13px; padding:2px; margin-top:10px;')
            div(class="col-md-12", style='font-size:40px; padding:0px; margin-top:10px;')
          ul(id='refs', class='list', style='margin: auto; padding-left:0px; padding-right:10px;')

            //icone para cada uma das ideias

            - each Idea in ideas
              li.row(id='node', class='col-md-6', style='margin: auto; padding-left:5px; padding-right:5px;')
                div.row(style='margin: auto; width:100%')
                  p.ref(class='refs1')= Idea.refs[0]
                  p.ref(class='refs2')= Idea.refs[1]
                  p.ref(class='refs3')= Idea.refs[2]
                div.row(class='col-md-12', style='margin: auto; padding: 0px; margin-top:10px;')
                  a(href="/ideas/"+Idea._id, class="icon")
                    div(style='margin-right:30px; margin-bottom:0px')

                    //desenho e rate

                    div.draw
                      div(id='#{Idea.id}')(style='height: 250px')
                    div.row(style='margin-top: 8px; margin-left:0px; margin-right:0px')
                      img.avatar(src=Idea.user.picture, style='float:left; padding: 0px; background-color:#fff')
                      div(class='col-md-10', style='margin-top: auto; margin-bottom: auto; padding: 0px; margin-left:5px;')
                        p.txicon(class='col-md-12', style='padding-left: 6px')= Idea.user.username
                        div(id='#{Idea.id}'+'m', class='col-md-10')
                        p.txicon(class='col-md-2', style='padding-left: 6px')= "("+Idea.rating.length+")"
                        p.txicon(class='col-md-12', style='padding-left: 6px')= "Comentários "+Idea.comments.length

          // pagination

          div(class='col-md-12')
            ul(class='pagination')

        //JQUERY
          //MAPS e RATE

        script(src='http://cdn.leafletjs.com/leaflet-0.7.2/leaflet.js')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/rateYo/2.1.1/jquery.rateyo.min.js')
        script(src='/javascripts/indexmap.js')

          //PAGINATION e SEARCH
        script(src='../bower_components/list.js/dist/list.js')
        script(src='../bower_components/list.pagination.js/dist/list.pagination.js')

  footer(class="footer")
    div.container
      div.col-md-4
        ul.ulmapasite Mapa do site
          li.liredux
            a.mapasite(href="/") Início
          li.liredux
            a.mapasite(href="/addidea/") Novo Trajeto
          li.liredux
            a.mapasite(href="#debate") Debate
          li.liredux
            a.mapasite(href="/contato/") Contato
          li.liredux
            a.mapasite(href="/projeto/") Projeto
      div.col-md-8(style='padding-right:10px;')
        div.col-md-12(style='padding-right:0px; margin-top:10px')
          img.siganos(src='../images/footer_03.png', style='float:right')
        ul(class="list-inline", style='float: right; margin-top:10px')
          a(href="https://www.facebook.com")
            img.redes(src='../images/footer_05.png')
          a(href="https://www.twitter.com")
            img.redes(src='../images/footer_07.png')
          a(href="https://plus.google.com")
            img.redes(src='../images/footer_06.png')
